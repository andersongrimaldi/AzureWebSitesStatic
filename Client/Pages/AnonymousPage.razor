@page "/anonymous"

<h3>Anonymous</h3>

@(FunctionCallString)

@code
{
    [Inject]
    public HttpClient Client { get; set; }
    public string FunctionCallString { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            FunctionCallString = await Client.GetStringAsync("/api/anonymous");
        }
        catch (Exception )
        {
            FunctionCallString = "Non autorizzato";
        }
    }
}