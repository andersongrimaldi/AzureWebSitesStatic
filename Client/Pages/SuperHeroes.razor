@page "/superheroes"
<h3>SuperHeroes</h3>

@(FunctionCallString)

@code
{
    [Inject]
    public HttpClient Client { get; set; }
    public string FunctionCallString { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            FunctionCallString = await Client.GetStringAsync("/superheroes");
        }
        catch (Exception)
        {
            FunctionCallString = "Non autorizzato";
        }
    }
}