@page "/leagues"
@using Soccer.Client.Pages.Paginations;
@using Soccer.Client.Services;
@using Soccer.Shared.FutDb;
@inject IFunctionServices Services;

@if (Current != null)
{
    <div class="container">
        <div class="row">
            @for (int i = 0; i < Current.LeagueList.Length; i++)
            {
                @*if (i % 3 == 0)
                {
                    <div class="row">
                }*@

                <div class="col-sm">
                    <LeagueComponent League="Current.LeagueList.ElementAt(i)"></LeagueComponent>
                </div>
                if (i % 3 == 2)
                {
                    </div>
                }
            }
        </div>
    </div>

    <PaginationComponent PaginationInfo="Current"></PaginationComponent>
}

@code {

    public Leagues Current { get; set; }


    protected override async Task OnInitializedAsync()
    {
        Current = await Services.GetLeagues();
    }
    
}
