@using Soccer.Shared.FutDb

<div class="@(Player.Rating < 80 ? "card bg-light card-with" : "card bg-warning card-with")">
	<img class="card-img-top player-img-size" src="data:image/png;base64,@(Convert.ToBase64String(Player.Image))" alt="@Player.Name">
	<div class="card-body">
		<h5 class="card-title">@GetName()</h5>
        <p class="card-text">
            <div class="d-flex p-6"><small>Anni: @Player.Age</small></div>
            <div class="d-flex p-6"><small>Compleanno: @Player.BirthDate.ToString("yyyy/MM/dd")</small></div>
            <div class="d-flex p-6"><small>Piede: <i>@Player.Foot</i></small></div>
            <div class="d-flex p-6"><small>Valore: @Player.Rating</small></div>
            <div class="d-flex p-6"><small>Position: @Player.Position</small></div>
        </p>
	</div>
</div>
